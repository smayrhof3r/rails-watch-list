
<div class="row mt-3">
  <div class="d-flex justify-content-center shadow">
      <%= simple_form_for(@list) do |f|%>
          <h3 class = "w-100 bg-dark text-light text-center mb-3">New List</h3>
          <%= f.input :name, placeholder: "List Name" %>
          <%= f.input :photo, as: :file %>
          <div class="text-end">
            <%= f.button :submit, class: "btn-outline-primary text-center" %>
          </div>
      <% end %>
  </div>
</div>
