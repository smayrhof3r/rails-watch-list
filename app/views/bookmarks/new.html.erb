<div class="row mt-3">
  <div class="d-flex justify-content-center">
      <%= simple_form_for([@list, @bookmark]) do |f|%>
          <h3 class = "w-100 bg-dark text-light text-center mb-3 rounded">Add a Movie</h3>
          <%= f.input :comment, input_html: {class: "text-primary"} %>
          <%= f.association :movie %>
        <div class="text-end">
          <%= f.button :submit, class: "btn-outline-primary" %>
        </div>
      <% end %>
  </div>
</div>
